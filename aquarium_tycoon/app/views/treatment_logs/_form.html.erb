<%= form_with(model: treatment_log, local: true) do |form| %>
  <% if treatment_log.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(treatment_log.errors.count, "error") %> prohibited this treatment_log from being saved:</h2>

      <ul>
      <% treatment_log.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <%= form.label :treatment_id %>


    <div class="field">
    <%= form.label :time %>
    <%= form.datetime_select :time, id: :feeding_log_time, :discard_day => true, :discard_month => true, :discard_year => true %>
  </div>

  <div class="field">
    <%= form.label :medicine %>
    <%= form.text_field :medicine, id: :treatment_log_medicine %>
  </div>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.text_field :quantity, id: :treatment_log_quantity %>
  </div>

  <div class="field">
    <%= form.label :employee_id %>
    <%= form.collection_select(:employee_id, Employee.find_by_sql('call current_employees()'), :employee_id, :full_name) %>
  </div>

  <div class="field">
    <%= form.label :animal_id %>
    <%= form.collection_select(:animal_id, Animal.all, :animal_id, :id_name) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
