<p id="notice"><%= notice %></p>

<h1>Event Registrations</h1>

<table>
  <thead>
    <tr>
      <th>Registration code</th>
      <th>Time</th>
      <th>Member</th>
      <th>Event</th>
      <th>Guest count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_registrations.each do |event_registration| %>
      <tr>
        <td><%= event_registration.registration_code %></td>
        <td><%= event_registration.time %></td>
        <td><%= event_registration.member_id %></td>
        <td><%= event_registration.event_id %></td>
        <td><%= event_registration.guest_count%></td>
        <td><%= link_to 'Show', event_registration %></td>
        <td><%= link_to 'Edit', edit_event_registration_path(event_registration) %></td>
        <td><%= link_to 'Cancel', event_registration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event Registration', new_event_registration_path %>
