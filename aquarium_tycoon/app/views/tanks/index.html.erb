<p id="notice"><%= notice %></p>

<h1>Tanks</h1>

<table>
  <thead>
    <tr>
      <th>Tank</th>
      <th>Name</th>
      <th>Description</th>
      <th>Water type</th>
      <th>Volume</th>
      <th>Temperature</th>
      <th>Year built</th>
      <th>Habitat</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tanks.each do |tank| %>
      <tr>
        <td><%= tank.tank_id %></td>
        <td><%= tank.name %></td>
        <td><%= tank.description %></td>
        <td><%= tank.water_type %></td>
        <td><%= tank.volume %></td>
        <td><%= tank.temperature %></td>
        <td><%= tank.year_built %></td>
        <td><%= tank.habitat_id %></td>
        <td><%= link_to 'Show', tank %></td>
        <td><%= link_to 'Edit', edit_tank_path(tank) %></td>
        <td><%= link_to 'Destroy', tank, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

