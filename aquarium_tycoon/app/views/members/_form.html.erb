<%= form_with(model: member, local: true) do |form| %>
  <% if member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= form.hidden_field :member_id %>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, id: :member_first_name %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, id: :member_last_name %>
  </div>

    <%= form.hidden_field :date_joined, :value => Time.now.strftime('%Y-%m-%d') %>

    <%= form.hidden_field :expiration_date, :value => Time.now + 18.months%>

  <div class="field">
    <%= form.label :fee %>
    <%= form.select :fee, [100, 200, 300], id: :member_fee %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
